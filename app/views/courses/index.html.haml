%div.row
  %div.col.s12.center-align
    %h3
      Course listing

%div.row
  - @courses.each do |course|
    %div.col.s6.m6
      %div.card.blue-grey.darken-1
        %div.card-content.white-text
          %span.card-title
            = course.short_name + ":"
            = course.name
          %p
            = course.description
        %div.card-action
          - if logged_in? && !(current_user.courses.include?(course))
            = link_to 'Enroll', course_enroll_path(course_id: course.id), method: :post
          %a{ href: "#"}
            Info
