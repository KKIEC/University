%div.row.sign-up-form
  %div.col.s6.m6
    %div.card.blue-grey.darken-1
      %div.card-content.white-text
        %span.card-title
          Name:
          = @student.name
        %p
          Email:
          = @student.email
        %p
          Course Enrollments: None

    = link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe,
    edit_student_path(@student),
    class: 'waves-effect waves-light btn'
