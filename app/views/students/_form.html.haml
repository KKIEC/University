= render 'shared/errors', obj: @student

%div.container
  %div.row.center.sign-up-form
    %div.col.s12.m12.l12
      %div.card-panel
        %h3.header
          = @student.new_record? ? 'Sign up' : 'Edit your profile'
        %div.row
          = form_for(@student, html: { class: "col s12" }) do |f|
            %div.row
              %div.input-field.col.s12
                = f.text_field :name, placeholder: 'Enter your full name', autofocus: true
                = f.label :name
            %div.row
              %div.input-field.col.s12
                = f.text_field :email, placeholder: 'Enter your email address'
                = f.label :email

            %div.row
              %div.input-field.col.s12
                = f.submit(@student.new_record? ? 'Sign up' : 'Submit updates', class: 'btn orange waves-effect waves-light right')
