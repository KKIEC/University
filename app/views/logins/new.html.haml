%div.container
  %div.row.center.sign-up-form
    %div.col.s12.m12.l12
      %div.card-panel
        %h3.header
          Log in
        %div.row
          = form_for(:logins, html: { class: "col s12" }) do |f|
            %div.row
              %div.input-field.col.s12
                = f.text_field :email, placeholder: 'Enter your email address', autofocus: true
                = f.label :email
            %div.row
              %div.input-field.col.s12
                = f.password_field :password, placeholder: 'Enter your password'
                = f.label :password, class: 'active'

            %div.row
              %div.input-field.col.s12
                = f.button '<i class="material-icons right">arrow_forward</i>Log in'.html_safe,
                class: 'btn orange waves-effect waves-light right'
